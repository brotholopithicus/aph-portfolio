doctype html
html
  head
    meta(charset='utf-8')
    meta(name='“viewport”', content='“width=device-width,initial-scale=1,user-scalable=no”')
    title Annemarie Hereford | Mammoth Queen | Santa Cruz, CA
    link(rel='stylesheet', href='css/normalize.css')
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css')
    block stylesheets
  body
    // **************** HEADER SECTION ****************
    .section.full-height
      .container.animated.fadeInUp.row
        .svg-container
          include logo
        .text-container
          //
            **************** HEADER SECTION YOUR NAME
            ****************
          h2.light
            | Annemarie&nbsp
            b Hereford
          // **************** HEADER SECTION SUBTITLE ****************
          h3.grey Designer and Creator of Amazing Things
          //
            **************** HEADER SECTION EMAIL ADDRESS
            ****************
          a.colored.sliding-middle-out(href='mailto:annemariephereford@gmail.com')
            h3 annemariephereford@gmail.com
    // **************** SPACER ****************
    .hint
      span.hint-text Scroll down to see more
      .arrow-down
    // **************** ABOUT ME SECTION ****************
    include about
    // **************** GALLERY SECTION ****************
    include gallery
    // **************** SPACER ****************
    .hint
      span.hint-text Take a look at what I've been up to
      .arrow-down
    // WORK SECTION
    include work
    // **************** SPACER ****************
    .hint
      span.hint-text I'm taken sorry.
      .arrow-down
    // CONTACT SECTION
    include contact
    // SCRIPTS
    script(src='js/script.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='libs/strip/js/strip.pkgd.min.js')
    link(rel='stylesheet', href='libs/strip/css/strip.css')
    script(src='js/app.js')
